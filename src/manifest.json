{
  "manifest_version": 3,
  "name": "Clean Facebook",
  "version": "1.0.1",
  "author": "Aleksei Polechin aka alekÂ´",
  "description": "Facebook feed without sponsored and suggested content",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "Clean Facebook",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "content.js"
      ],
      "css": [
        "content-style.css"
      ]
    }
  ]
}
