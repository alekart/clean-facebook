{
  "manifest_version": 3,
  "name": "Clean Facebook",
  "author": "Aleksei Polechin aka AlekÂ´",
  "version": "0.1.0",
  "description": "Browse Facebook without ads (sponsored and suggested content)",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "Clean Facebook",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}